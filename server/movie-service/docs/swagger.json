{
	"swagger": "2.0",
	"info": {
		"description": "API service for working with the flicksfi application for fast movie and video search. tg [https://t.me/flicksfi]",
		"title": "movie microservice API",
		"version": "0.1.2"
	},
	"host": "localhost:8011",
	"basePath": "/microservice/movie-service",
	"schemes": ["http"],
	"paths": {
		"/recommendation": {
			"post": {
				"summary": "Add recommendations",
				"tags": ["Recommendation"],
				"consumes": ["application/json"],
				"produces": ["application/json"],
				"security": [
					{
						"cookieAuth": []
					}
				],
				"parameters": [
					{
						"in": "body",
						"name": "body",
						"required": true,
						"schema": {
							"$ref": "#/definitions/RecommendationAddPayload"
						}
					}
				],
				"responses": {
					"204": {
						"description": "Successfully updated or created recommendations"
					},
					"400": {
						"description": "Invalid input or failed to process recommendation",
						"schema": {
							"type": "string"
						}
					}
				}
			}
		},
		"/movie/{id}": {
			"get": {
				"summary": "Get movie details",
				"tags": ["Movies"],
				"consumes": ["application/json"],
				"produces": ["application/json"],
				"security": [
					{
						"cookieAuth": []
					}
				],
				"parameters": [
					{
						"in": "path",
						"name": "id",
						"required": true,
						"type": "integer",
						"format": "int32"
					}
				],
				"responses": {
					"200": {
						"description": "Movie details"
					},
					"400": {
						"description": "Invalid input or failed to process movie"
					}
				}
			}
		},
		"/movie": {
			"get": {
				"summary": "Get list of movies",
				"tags": ["Movies"],
				"responses": {
					"200": {
						"description": "Successful response with a list of movies",
						"schema": {
							"$ref": "#/definitions/Movies"
						}
					},
					"500": {
						"description": "Internal server error",
						"schema": {
							"type": "string"
						}
					}
				}
			}
		},
		"/movie/t/{uuid}": {
			"post": {
				"summary": "Get movies by text user",
				"tags": ["Movies"],
				"consumes": ["application/json"],
				"produces": ["application/json"],
				"security": [
					{
						"cookieAuth": []
					}
				],
				"parameters": [
					{
						"in": "path",
						"name": "uuid",
						"required": true,
						"schema": {
							"type": "string"
						}
					},
					{
						"name": "payload",
						"in": "body",
						"required": true,
						"schema": {
							"$ref": "#/definitions/TMoviesPayload"
						}
					}
				],
				"responses": {
					"200": {
						"description": "List of similar movies",
						"schema": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/Movie"
							}
						}
					},
					"400": {
						"description": "Invalid input or failed to process movie"
					}
				}
			}
		},
		"/movie/image/{image}": {
			"get": {
				"summary": "Get a movie image",
				"description": "Downloads the image from TMDB using the specified path and returns it via proxy",
				"tags": ["Movies"],
				"parameters": [
					{
						"name": "image",
						"in": "path",
						"required": true,
						"type": "string",
						"description": "The relative path to the TMDB image, for example: /xqR4ABkFTFYe8NDJi3knwWX7zfn.jpg"
					}
				],
				"responses": {
					"200": {
						"description": "Successful response with an image",
						"schema": {
							"type": "file"
						}
					},
					"400": {
						"description": "Invalid request (missing image parameter)",
						"schema": {
							"type": "string",
							"example": "image not found"
						}
					},
					"500": {
						"description": "Server or proxy error",
						"schema": {
							"type": "string",
							"example": "proxy error"
						}
					}
				}
			}
		},
		"securityDefinitions": {
			"cookieAuth": {
				"type": "apiKey",
				"in": "cookie",
				"name": "auth-token"
			}
		},
		"definitions": {
			"RecommendationAddPayload": {
				"type": "object",
				"required": ["genres"],
				"properties": {
					"genres": {
						"type": "array",
						"items": {
							"type": "integer"
						},
						"example": [28, 36, 53]
					}
				}
			},
			"Movies": {
				"type": "object",
				"properties": {
					"page": {
						"type": "integer",
						"format": "uint16",
						"description": "Current page number"
					},
					"results": {
						"type": "array",
						"items": {
							"$ref": "#/definitions/Movie"
						},
						"description": "List of movies on the current page"
					},
					"total_pages": {
						"type": "integer",
						"format": "uint32",
						"description": "Total number of pages available"
					},
					"total_results": {
						"type": "integer",
						"format": "uint32",
						"description": "Total number of results available"
					}
				}
			},
			"Movie": {
				"type": "object",
				"properties": {
					"adult": {
						"type": "boolean",
						"description": "Indicates if this is an adult movie"
					},
					"backdrop_path": {
						"type": "string",
						"description": "URL to backdrop image"
					},
					"genre_ids": {
						"type": "array",
						"items": {
							"type": "integer",
							"format": "uint16"
						},
						"description": "List of genre IDs associated with the movie"
					},
					"id": {
						"type": "integer",
						"format": "uint32",
						"description": "Unique identifier for the movie"
					},
					"original_language": {
						"type": "string",
						"description": "Original language of the movie"
					},
					"original_title": {
						"type": "string",
						"description": "Original title of the movie"
					},
					"overview": {
						"type": "string",
						"description": "Brief overview or summary of the movie"
					},
					"popularity": {
						"type": "number",
						"format": "float",
						"description": "Popularity score of the movie"
					},
					"poster_path": {
						"type": "string",
						"description": "URL to poster image"
					},
					"release_date": {
						"type": "string",
						"description": "Release date of the movie in ISO format (YYYY-MM-DD)"
					},
					"title": {
						"type": "string",
						"description": "Translated title of the movie"
					},
					"video": {
						"type": "boolean",
						"description": "Indicates if there is a video trailer available"
					},
					"vote_average": {
						"type": "number",
						"format": "double",
						"description": "Average rating given by users"
					},
					"vote_count": {
						"type": "integer",
						"format": "uint16",
						"description": "Number of votes received"
					}
				}
			},
			"TMoviesPayload": {
				"type": "object",
				"required": ["text"],
				"properties": {
					"text": {
						"type": "string",
						"example": "I want a fantasy movie with dragons and adventure"
					}
				}
			}
		}
	}
}
